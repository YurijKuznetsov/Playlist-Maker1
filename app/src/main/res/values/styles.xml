<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/padding_16</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black_1</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/padding_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black_1</item>
        <item name="iconPadding">@dimen/padding_10</item>
    </style>
    <style name="messageTextStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textFontWeight">400</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="toolbarStyle">
        <item name="android:titleTextColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textFontWeight">500</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_medium</item>t
    </style>
    <style name="editTextStyle">
        <item name="backgroundTint">@color/light_gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black_1</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textFontWeight">400</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="PlaceholderTextStyle">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:textFontWeight">400</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="buttonUpdateStyle">
        <item name="backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textFontWeight">500</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/padding_54</item>
    </style>
</resources>