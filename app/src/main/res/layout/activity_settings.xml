<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="14dp"
    tools:ignore="RtlSymmetry">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:paddingHorizontal="4dp"
            android:paddingVertical="4dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="28dp"
            android:text="@string/Setting"
            android:textColor="@color/black_1"
            android:textFontWeight="500"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="@dimen/height"
        android:layout_marginTop="40dp"
        android:paddingEnd="18dp"
        android:text="@string/theme_night"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="@dimen/text_size2"
        android:thumb="@drawable/knob"
        android:track="@drawable/track"
        tools:ignore="UseSwitchCompatOrMaterialXml,VisualLintButtonSize,TextContrastCheck" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingVertical="@dimen/padding_vertical"
            android:text="@string/send"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="@dimen/text_size2"
            tools:ignore="TextContrastCheck" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="@dimen/padding_start"
            android:src="@drawable/send"
            tools:ignore="ContentDescription,ImageContrastCheck" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingVertical="@dimen/padding_vertical"
            android:text="@string/support"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="@dimen/text_size2"
            tools:ignore="TextContrastCheck" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="22.1dp"
            android:layout_marginEnd="14dp"
            android:src="@drawable/support"
            tools:ignore="ContentDescription,ImageContrastCheck" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingVertical="@dimen/padding_vertical"
            android:text="@string/user_agreement"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="@dimen/text_size2"
            tools:ignore="TextContrastCheck" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/arrow_forward"
            tools:ignore="ContentDescription,ImageContrastCheck" />

    </FrameLayout>

</LinearLayout>

