<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="horizontal"
    android:paddingStart="13dp"
    android:paddingEnd="@dimen/padding_12"
    android:theme="@style/Theme.PlaylistMaker">

    <ImageView
        android:id="@+id/track_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginVertical="@dimen/padding_08"
        tools:src="@drawable/placeholder"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/padding_08">

        <TextView
            android:id="@+id/track_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_14"
            style="@style/messageTextStyle"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="@string/track_name_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/messageTextStyle"
                android:textSize="@dimen/text_size3"
                android:textColor="?attr/iconTint"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="@string/artist_name_1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic"
                app:tint="?attr/iconTint"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/track_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/messageTextStyle"
                android:textSize="@dimen/text_size3"
                android:textColor="?attr/iconTint"
                android:maxLines="1"
                tools:text="@string/track_time_1"/>
        </LinearLayout>


    </LinearLayout>
    
    <ImageView
        android:id="@+id/track_arrow_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:src="@drawable/arrow_forward_track"
        app:tint="?attr/iconTint"
        tools:ignore="ContentDescription" />

</LinearLayout>